---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@4.0.0/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/flowbite@4.0.0/dist/flowbite.min.js"
    ></script>
    <title>Astro Basics</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  html {
    --font-size-tittle: 36px;
    --font-size-subtittle: 24px;
    --font-size-default: 16px;
  }
  body {
    background: linear-gradient(114deg, #000517 9.29%, #222 99.06%);
    background-attachment: fixed;
  }
  h1 {
    font-size: var(--font-size-tittle);
  }
  * {
    color: white;
  }
</style>
